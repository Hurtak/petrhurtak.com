{
  "extends": ["start", "start-react"],
  "rules": {
    "jsx-a11y/media-has-caption": 0,
    "react/no-unescaped-entities": 0,
    "react/no-unknown-property": ["error", { "ignore": ["jsx", "global"] }]
  },

  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": "./tsconfig.base.json"
      }
    }
  ],

  "ignorePatterns": ["dist", "_next", "_legacy"]
}
