class Splitter {
	constructor() {
		this._node = document.createElement("div");
		this._node.classList.add("splitter");

		this._node.addEventListener("mousedown", this);
	}

	getNode() {
		return this._node;
	}

	handleEvent(e) {
		switch (e.type) {
			case "mousedown":
			document.addEventListener("mousemove", obj);
			document.addEventListener("mouseup", this);
			break;

			case "mousemove":
			break;

			case "mouseup":
			document.removeEventListener("mousemove", this);
			document.removeEventListener("mouseup", this);
			break;
		}
	}
}
