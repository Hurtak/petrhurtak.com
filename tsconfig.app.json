{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "include": [
    "vite-env.d.ts",

    "src/**/*.ts",
    "src/**/*.tsx",
    "articles/**/*.ts",
    "articles/**/*.tsx",
    "scripts/**/*.ts"
  ]
}
