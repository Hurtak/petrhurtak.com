{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",

    "src/**/*.ts",
    "src/**/*.tsx",
    "articles/**/*.ts",
    "articles/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx"
  ]
}
